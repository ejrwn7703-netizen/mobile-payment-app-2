{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Run (module)",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "env": {
                "FLASK_APP": "src.mobile_payment_app.app"
            },
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "FastAPI (uvicorn) - Run (module)",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.fastapi_app:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}